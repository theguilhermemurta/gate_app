<LoginScreen>
	canvas:
		Color:
			rgb: utils.get_color_from_hex("#FFFFFF")
		Rectangle:
			size: self.size
			pos: self.pos

	FloatLayout:
		TextInput:
			id: login_email
			multiline: False
			hint_text: "e-mail"
			size_hint: .8,.1
			pos_hint: {"top": .9, "right": .9}
		TextInput:
			id: login_password
			multiline: False
			password: True
			hint_text: "password"
			size_hint: .8,.1
			pos_hint: {"top": .7, "right": .9}
		Label:
			id: login_message
			color: (1,0,0,1)
			size_hint: .8,.1
			pos_hint: {"top": .4, "right": .9}
		
		GridLayout:
			cols: 2
			pos_hint: {"down": 1, "left": 1}
			size_hint: 1, .2
			MDRaisedButton:
				text: "Criar conta"
				pos_hint: {"top": .2, "left": .9}
				on_release:
					app.change_screen("create_screen")
			MDRaisedButton:
				text: "Sign in"
				pos_hint: {"top": .2, "left": .3}
				on_release:
					app.my_firebase.sign_in(login_email.text, login_password.text)
					print("sing in!", login_email.text, login_password.text)