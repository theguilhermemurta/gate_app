<LoginScreen>

	FloatLayout:
		MDTextField:
			id: login_email
			icon_left: "email"
			multiline: False
			hint_text: "e-mail"
			size_hint: .8,.1
			pos_hint: {"top": .7, "right": .9}
		MDTextField:
			id: login_password
			multiline: False
			password: True
			hint_text: "senha"
			size_hint: .8,.1
			pos_hint: {"top": .6, "right": .9}

		

		MDRaisedButton:
			text: "Entrar"
			pos_hint: {"top": .5, "right": .9}
			size_hint: .8,.08
			on_release:
				app.my_firebase.sign_in(login_email.text, login_password.text)
				print("sing in!", login_email.text, login_password.text)

		LabelButton:
			id: New_password
    		text: "[u]Esqueceu sua senha? Obter nova senha![/u]"
    		markup: True
    		color: (0,0,1,1)
			pos_hint: {"top": .4, "right": 1}
			size_hint: 1,.1
			on_release: print("Esqueceu a senha!")

		LabelButton:
			id: New_account
			text: "[u]Criar nova conta[/u]"
			markup: True
			color: (0,0,1,1)
			pos_hint: {"top": .1, "right": 1}
			size_hint: 1,.1
			on_release: app.change_screen("create_screen")





