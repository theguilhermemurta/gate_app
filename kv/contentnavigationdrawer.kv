<ContentNavigationDrawer>:
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"

    AnchorLayout:
        anchor_x: "left"
        size_hint_y: None
        height: avatar.height

        Image:
            id: avatar
            size_hint: None, None
            size: "56dp", "56dp"
            source: "icons/logo.jpg"

    MDLabel:
        text: "Gate App"
        font_style: "Button"
        size_hint_y: None
        height: self.texture_size[1]

    MDLabel:
        id: drawerlogo
        font_style: "Caption"
        size_hint_y: None
        height: self.texture_size[1]

    ScrollView:
        DrawerList:
            id: md_list
